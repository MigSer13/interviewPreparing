<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL94Dialect</property>
        <property name="hibernate.connection.driver.class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/postgres?currentSchema=lesson5</property>
        <property name="connection.username">postgre</property>
        <property name="connection.password">postgre</property>
        <property name="show_sql">true</property>

        <mapping class="lesson5/Student.java"/>
    </session-factory>
</hibernate-configuration>

